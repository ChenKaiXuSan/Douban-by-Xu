.meta {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 50rpx 40rpx;
}

.poster {
  width: 100%;
  height: 800rpx;
  margin: 20rpx;
}

.title {
  font-style: 42rpx;
  color: #444;
}

.info {
  font-size: 24rpx;
  color: #888;
  margin-top: 20rpx;
  width: 80%;
}

.summary {
  width: 80%;
  margin: 30rpx auto;
}

.label {
  display: block;
  font-size: 30rpx;
  margin-bottom: 30rpx;
}

.content {
  color: #666;
  font-size: 22rpx;
  padding: 2em;
}

.background {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  height: 100%;
  width: 100%;
  z-index: -1000;
  opacity: 0.1;
}

/* pages/movie/movie-detail/movie-detail.wxss */
@import "/pages/common/rating/rating.wxss";

.summary-session {
  display: flex;
  flex-direction: row;
  height: 260rpx;
  align-items: center;
}

.movie-summary {
  display: flex;
  flex-direction: column;
  width: 520rpx;
  margin: 30rpx 30rpx 30rpx 30rpx;
}

.movie-summary .name {
  width: 100%;
  color: #4a4a4a;
  font-size: 42rpx;
  font-weight: 700;
  line-height: 1.6;
  word-break: keep-all;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.movie-summary .subtype, .origin-name, .countries {
  font-size: 24rpx;
  color: #9e9e9e;
}

.movie-rating {
  width: 120rpx;
  height: 120rpx;
  border: 1px solid #9e9e9e;
  box-shadow: 4rpx 4rpx 2rpx #e6e6e6;
  border-radius: 6rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  text-align: center;
}

.movie-rating .average {
  font-size: 36rpx;
  font-weight: 700;
}

.movie-rating .rating {
  display: flex;
  flex-direction: row;
  position: inherit;
  margin-top: 0rpx;
  margin-bottom: 0rpx;
  align-self: center;
}

.movie-rating .rating-star {
  content: "";
  display: inline-block;
  width: 55px;
  height: 11px;
  position: inherit;
  background-repeat: no-repeat;
  background-image: url(data:image/png;base64,);
}

.movie-rating .ratings_count {
  font-size: 20rpx;
}

.desc-session, .directors-casts-session {
  display: flex;
  flex-direction: column;
  padding: 0rpx 30rpx 0rpx 30rpx;
  margin: 20rpx 0rpx 20rpx 0rpx;
}

.desc-session .title, .directors-casts-session .title {
  color: #9e9e9e;
  font-size: 30rpx;
  line-height: 42rpx;
}

.desc-wrapper {
  display: inline-block;
}

.desc-session .desc-content {
  font-size: 24rpx;
  color: #4a4a4a;
  line-height: 38rpx;
  text-indent: 2em;
  text-overflow: ellipsis;
  overflow: hidden;
  display: block;
}

.desc-session .desc-content-auto {
  height: auto;
}

.desc-session .desc-content-3line {
  height: 114rpx;
}

.desc-session .extension {
  background: #fff;
  height: 38rpx;
  font-size: 24rpx;
  line-height: 38rpx;
  color: #32cd32;
}

.directors-casts-scroll {
  width: 100%;
  white-space: nowrap;
}

.directors-casts-wrapper {
  display: inline-block;
}

.directors-casts-content {
  display: flex;
  flex-direction: column;
  text-align: center;
}

.directors-casts-wrapper .image {
  width: 140rpx;
  height: 200rpx;
  margin-left: 12rpx;
  margin-right: 12rpx;
}

.directors-casts-wrapper .image:first-child {
  margin-left: 0rpx;
}

.directors-casts-wrapper .image:last-child {
  margin-right: 0rpx;
}

.directors-casts-wrapper .name {
  width: 140rpx;
  color: #4a4a4a;
  font-size: 22rpx;
  word-break: keep-all;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 预告片/剧照 */

image {
  width: 100%;
  height: 100%;
}

.photos .subtitle {
  margin-left: 30rpx;
}

.photos>scroll-view {
  white-space: nowrap;
}

.trailer {
  width: 385rpx;
  height: 275rpx;
  position: relative;
  display: inline-block;
}

.trailer:not(:last-child) {
  margin-right: 15rpx;
}

.trailer:first-child {
  margin-left: 30rpx;
}

.trailer:last-child {
  margin-right: 30rpx;
}

.front {
  position: absolute;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  top: 0;
  left: 0;
}

.front>.icon {
  width: 1em;
  height: 1em;
  padding: 0.3em;
  background-color: rgba(0, 0, 0, 0.5);
  border: 1px solid #fff;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-content: center;
}

/* 短评 start */

.page-detail .comments {
  padding: 30rpx;
}

.comments .item-comment {
  margin-bottom: 1em;
}

.item-comment {
  display: flex;
  flex-direction: row;
}

.item-comment .user-header {
  width: 75rpx;
  height: 75rpx;
  background-color: #f7f7f7;
  overflow: hidden;
  border-radius: 50%;
}

.item-comment .comment-right {
  flex: 1;
  display: flex;
  flex-direction: column;
  margin-left: 30rpx;
}

.item-comment .comment-right .name-rating .username {
  margin-right: 0.2em;
}

.item-comment .comment-right .date {
  color: #bbb;
  font-size: 0.85em;
}

.page-detail .more {
  color: #5d6bee;
  margin-left: 30rpx;
}

.subtitle {
  color: #7c858a;
  line-height: 2.8em;
  font-size: 0.9em;
}

/* 折叠开关  */

.fold {
  color: #888;
  font-size: 0.9em;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0.3em 0;
}

.fold::after {
  content: ' ';
  height: 0.5em;
  width: 0.5em;
  border-right: 1px solid #888;
  border-bottom: 1px solid #888;
  border-top: 1px solid transparent;
  border-left: 1px solid transparent;
  margin-left: 0.5em;
  margin-top: -0.35em;
  transform: rotate(45deg);
}

.fold.active::after {
  border-right: 1px solid transparent;
  border-bottom: 1px solid transparent;
  border-top: 1px solid #888;
  border-left: 1px solid #888;
  margin-top: 0.35em;
}
